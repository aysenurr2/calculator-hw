<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <Grid ColumnDefinitions="*,*,*,*" ColumnSpacing="5" Margin="5" RowSpacing="5" Padding="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="ExpressionLabel"
              Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              HorizontalTextAlignment="End"
              VerticalTextAlignment="Center"
              FontSize="18"
              TextColor="Gray" />

        <Entry x:Name="Display"
              Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="4"
              Keyboard="Numeric" />

        <Button x:Name="ButtonCE" Text="CE" Grid.Row="2" Grid.Column="0" Clicked="OnClearEntryPressed" />
        <Button x:Name="ButtonC" Text="C" Grid.Row="2" Grid.Column="1" Clicked="OnClearAllPressed" />
        <Button x:Name="ButtonSqrt" Text="√" Grid.Row="2" Grid.Column="2" Clicked="OnSqrtPressed" />
        <Button x:Name="ButtonSquare" Text="x²" Grid.Row="2" Grid.Column="3" Clicked="OnSquarePressed" />

        <Button x:Name="NumberButton1" Clicked="OnNumberPressed" Text="1" Grid.Row="3" Grid.Column="0" />
        <Button x:Name="NumberButton2" Clicked="OnNumberPressed" Text="2" Grid.Row="3" Grid.Column="1" />
        <Button x:Name="NumberButton3" Clicked="OnNumberPressed" Text="3" Grid.Row="3" Grid.Column="2" />
        <Button x:Name="NumberOperatorButtonAdd" Clicked="OnOperatorPressed" Text="+" Grid.Row="3" Grid.Column="3" />

        <Button x:Name="NumberButton4" Clicked="OnNumberPressed" Text="4" Grid.Row="4" Grid.Column="0" />
        <Button x:Name="NumberButton5" Clicked="OnNumberPressed" Text="5" Grid.Row="4" Grid.Column="1" />
        <Button x:Name="NumberButton6" Clicked="OnNumberPressed" Text="6" Grid.Row="4" Grid.Column="2" />
        <Button x:Name="NumberOperatorButtonSubtract" Clicked="OnOperatorPressed" Text="-" Grid.Row="4" Grid.Column="3" />

        <Button x:Name="NumberButton7" Clicked="OnNumberPressed" Text="7" Grid.Row="5" Grid.Column="0" />
        <Button x:Name="NumberButton8" Clicked="OnNumberPressed" Text="8" Grid.Row="5" Grid.Column="1" />
        <Button x:Name="NumberButton9" Clicked="OnNumberPressed" Text="9" Grid.Row="5" Grid.Column="2" />
        <Button x:Name="NumberOperatorButtonMultiply" Clicked="OnOperatorPressed" Text="*" Grid.Row="5" Grid.Column="3" />

        <Button x:Name="NumberButton0" Clicked="OnNumberPressed" Text="0" Grid.Row="6" Grid.Column="0" />
        <Button x:Name="DecimalButton" Clicked="OnDecimalPointPressed" Text="." Grid.Row="6" Grid.Column="1" />
        <Button x:Name="OperatorButtonEqual" Clicked="OnOperatorPressed" Text="=" Grid.Row="6" Grid.Column="2" />
        <Button x:Name="NumberOperatorButtonDivide" Clicked="OnOperatorPressed" Text="/" Grid.Row="6" Grid.Column="3" />

    </Grid>


</ContentPage>
